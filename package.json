{
  "name": "@moonlitworks/persist",
  "version": "0.0.7",
  "description": "centralized library to handle persistent data",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/moonlitworks/persist#readme",
  "repository": "git@github.com:moonlitworks/persist.git",
  "author": "eyzi <contact@eyzi.dev>",
  "license": "MPL-2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "check-coverage": true,
    "all": true,
    "skip-full": true,
    "reporter": "lcov",
    "include": [
      "src/**"
    ]
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": "./lib/index",
    "./mongodb": "./lib/services/mongodb"
  },
  "scripts": {
    "build": "tsc",
    "build:test": "yarn build && yarn test",
    "test": "nyc mocha",
    "release": "npx standard-version --sign",
    "release:dev": "npx standard-version --sign --prerelease",
    "release:dryrun": "npx standard-version --dry-run"
  },
  "dependencies": {
    "mongoose": "^6.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^13.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
